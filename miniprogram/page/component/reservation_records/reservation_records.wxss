@import '../../common/common.wxss';

.reservation-box{
    color: #999;
    font-size: 28rpx;
}
.reservation{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.reservation-box .reservation::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.reservation-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
}
.reservation-list:last-child{
    border-bottom: 0;
}
.reservation-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
